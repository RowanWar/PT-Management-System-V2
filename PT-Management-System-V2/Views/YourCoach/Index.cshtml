@model PT_Management_System_V2.Data.ViewModels.YourCoach_ViewModel




<div class="container my-5">
    <div class="card shadow">
        <div class="row g-0">
            <!-- Coach Profile Picture -->
            <div class="col-md-4">
                <img src="data:image/png;base64," class="img-fluid rounded-start" alt="Coach Profile Picture" style="width:100%; height:auto;">
            </div>

            <!-- Coach Information -->
            <div class="col-md-8">
                <div class="card-body">
                    <h3 class="card-title">@Model.CoachFirstName @Model.CoachLastName</h3>
                    <p class="card-text"><strong>Username:</strong> @Model.CoachUserName</p>
                    <p class="card-text"><strong>Email:</strong> @Model.CoachEmail</p>
                    <p class="card-text"><strong>Phone:</strong> @Model.CoachPhoneNumber</p>

                    <hr>

                    <!-- Coach Profile Description -->
                    <h5>About the Coach</h5>
                    <p>@Model.CoachProfileDescription</p>

                    <!-- Coach Qualifications -->
                    <h5>Qualifications</h5>
                    <p>@Model.CoachQualifications</p>
                </div>
            </div>
            
            <br />

            <div class="col-md-12">
                <div class="card-body">
                    <h3 class="card-title">Upcoming Check In</h3>
                        <div id="upcomingCheckInContainer">
                            <!-- Check-ins are inserted here dynamically via JS -->
                        </div>

                    <h3 class="card-title">Recent Check Ins </h3>
                        <div id="checkInsContainer">
                            <!-- Check-ins are inserted here dynamically via JS -->
                        </div>
                        <button id="loadMoreBtn" onclick="loadMoreCheckIns()">Load More...</button>
                </div>
            </div>

        </div>
    </div>
</div>


<script src="~/js/yourCoach_Index.js"></script>

